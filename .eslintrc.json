{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": [
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "settings": {
        "import/extensions": [
            ".js",
            ".mjs"
          ],
          "import/resolver": {
            "node": {
              "extensions": [
                ".js"
              ]
            }
          }
    },
    "rules": {
        "import/no-unresolved": [2, {"commonjs": true, "amd": true}]
    }
}
